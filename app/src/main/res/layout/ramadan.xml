<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offWhite"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="3dp"
    android:paddingRight="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="8dp"
                android:orientation="vertical"
                android:background="@drawable/list_item_design2">

                <TextView
                    android:id="@+id/arabicDate"
                    android:layout_width="match_parent"
                    android:text="১ রমজান"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/arabicYearDay"
                    android:layout_width="match_parent"
                    android:text="১৪৪১, শনিবার"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/engDate"
                    android:layout_width="match_parent"
                    android:text="২৪ এপ্রিল ২০২০"
                    android:textColor="@color/offWhite"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/list_item_design3"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/seheri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="সেহেরীর শেষঃ ৪:০৯"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/iftar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ইফতারের সময়ঃ ৬:২৭"
                    android:textColor="@color/white" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/list_item_design"
            android:orientation="vertical"
            android:padding="8dp">



            <TextView
                android:id="@+id/fajr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/white" />



            <TextView
                android:id="@+id/juhur"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/asar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/maghrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/isha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/sunrise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/sunset"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textAllCaps="true"
                android:textColor="@color/white" />



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>